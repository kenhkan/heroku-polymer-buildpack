#!/usr/bin/env bash

BUILD_DIR=$1
CACHE_DIR=$2

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

echo "-----> heroku-polymer-buildpack: Adding polymer to PATH..."
mkdir -p $BUILD_DIR/.profile.d
cat<<\EOF > $BUILD_DIR/.profile.d/heroku-polymer-buildpack.sh
PATH="${PATH}:${DIR}/node_modules/.bin"
EOF
